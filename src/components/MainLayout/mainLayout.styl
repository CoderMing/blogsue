@import '../../utils/utils.styl'

#content
  width 100%
  max-width 1240px
  box-sizing border-box
  margin 0 auto
  padding 40px
  padding-top 70px
  overflow hidden
  display flex
  align-items flex-start

.content-item
  border-radius 5px
  
.content-left
  width 620px
  padding-right 340px
  flex-grow 1
  flex-shrink 1
  
.content-right
  display block
  position fixed
  right 50%
  top 70px
  margin-right -560px
  flex-grow 0
  flex-shrink 0
  width 300px
  transition all .3s ease
  &.con-move-to-top
    transform translate(0, -320px)

@media screen and (max-width 1240px)
  .content-left
    padding-right 260px
  .content-right
    right 40px
    width 240px
    margin-right 0