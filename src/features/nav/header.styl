@import '../../utils/utils.styl'

#header-container
  position fixed
  width 100vw
  z-index 100
  .qr-button
    position relative
    &:hover .url-qr
      display inline
    .url-qr
      display none
      transition opacity .3s
      position absolute
      right 0
      top 50px
      background $white1
      padding 12px
      border-radius 5px
      border 1px solid $white4
      box-shadow 0px 0px 20px $white5

#nav-content
  max-width 1440px
  margin 0 auto
  a
    color inherit !important
    &:hover
      color inherit 
      text-decoration-color inherit

#content-root.bp3-dark
  .url-qr
    background $bg3 !important
    border-color $bg2 !important
    box-shadow 0px 0px 20px $bg1 !important

@media screen and (max-width 800px)
  .bp3-navbar
    button, .bp3-navbar-divider, .bp3-align-right
      display none !important
    .bp3-align-left
      float none !important 
      .bp3-navbar-heading
        width 100%
        display block
        text-align center